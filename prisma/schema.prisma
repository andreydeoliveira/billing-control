generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Conta {
  id              String        @id @default(uuid())
  name            String
  observacao      String        @db.Text
  datacriacao     DateTime      @default(now())
  dataatualizacao DateTime      @updatedAt
  classificacao   Classificacao @relation(fields: [classificacaoId], references: [id])
  classificacaoId String
  movimentacoesOrigem  Movimentacao[] @relation("ContaOrigem")
  movimentacoesDestino Movimentacao[] @relation("ContaDestino")
}

model Classificacao {
  id              String   @id @default(uuid())
  name            String
  observacao      String   @db.Text
  datacriacao     DateTime @default(now())
  dataatualizacao DateTime @updatedAt
  Conta           Conta[]
}

model Cartao {
  id              String   @id @default(uuid())
  name            String
  datacriacao     DateTime @default(now())
  dataatualizacao DateTime @updatedAt
}

model ContaBancaria {
  id             String   @id @default(uuid())
  name           String
  datacriacao    DateTime @default(now())
  dataatualizacao DateTime @updatedAt
}

model Movimentacao {
  id              String   @id @default(uuid())
  contaOrigemId   String
  contaDestinoId  String
  contaOrigem     Conta    @relation("ContaOrigem", fields: [contaOrigemId], references: [id])
  contaDestino    Conta    @relation("ContaDestino", fields: [contaDestinoId], references: [id])
  valor           Float
  dataVencimento   DateTime
  dataPago         DateTime
  datacriacao     DateTime @default(now())
  dataatualizacao DateTime @updatedAt
  observacao      String   @db.Text
}
